<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="60dp"
    android:paddingBottom="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/amberLight">

    <TextView
        android:id="@+id/txtCurrentUserInfo"
        android:text="@string/userInfo"
        style="@style/fragmentTextViewStyle"
        android:background="@drawable/fragment_custom_textview_selector"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


    <TextView
        android:id="@+id/txtChangePassword"
        android:text="@string/changePassword"
        android:layout_marginTop="30dp"
        style="@style/fragmentTextViewStyle"
        android:background="@drawable/fragment_custom_textview_selector"
        app:layout_constraintTop_toBottomOf="@id/txtCurrentUserInfo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/txtLogout"
        android:text="@string/logout"
        android:layout_marginTop="30dp"
        style="@style/fragmentTextViewStyle"
        android:background="@drawable/fragment_custom_textview_selector"
        app:layout_constraintTop_toBottomOf="@id/txtChangePassword"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>